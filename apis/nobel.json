{
  "openapi": "3.0.3",
  "info": {
    "title": "Simple API",
    "version": "1.0.0",
    "description": "A minimal OpenAPI spec for testing"
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "paths": {
    "/ping": {
      "get": {
        "summary": "Ping the server",
        "responses": {
          "200": {
            "description": "Pong response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "pong"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
